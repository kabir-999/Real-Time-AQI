FROM python:3.12-slim

# Optimized Dockerfile for web dashboard - much lighter than before
WORKDIR /app

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install only essential system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create requirements file inline for smaller size
RUN echo "psycopg2-binary==2.9.10\nconfluent-kafka==2.6.1\nflask==3.0.0\nrequests==2.31.0" > requirements.txt && \
    pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY src/web/dashboard.py .

# Create a non-root user
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app
USER app

# Expose port
EXPOSE 8000

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the web dashboard
CMD ["python", "dashboard.py"]
